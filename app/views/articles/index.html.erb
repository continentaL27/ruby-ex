<h1>Articles</h1>

<ul>
    <% 
        @articles.each do |article| # evaluate ruby code
        %>  
        <li>
        <%= 
            article.title  # evaluate ruby code and return value  
        %>, <br> 
        <span>       
            <%= article.body %>
        </span>
        </li>
    <% end %>
</ul>